@using Hikkaba.Web.ViewModels.SearchViewModels
@model SearchRequestViewModel

<form asp-controller="Posts" asp-action="Search" method="get" class="form-group">
    <div class="input-group">
        <input asp-for="Query" class="form-control search-input" placeholder="Search for..."><span class="input-group-btn"><button class="btn btn-default" type="submit"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></button></span>
    </div>
    <div><span asp-validation-for="Query" class="text-danger"></span></div>
</form>