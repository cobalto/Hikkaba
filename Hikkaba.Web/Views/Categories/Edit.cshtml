@model Hikkaba.Web.ViewModels.CategoriesViewModels.CategoryViewModel
@{
    ViewData["Title"] = $"Edit category {Model.Alias}";
}

<form asp-controller="Categories" asp-action="Edit" method="post" class="form-horizontal">
    <h4>@ViewData["Title"]</h4>
    <hr />

    @Html.EditorFor(model => model)

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-default">Save</button>
        </div>
    </div>
</form>
